{
  "name": "node-typescript-mongodb-rest-api-skeleton",
  "version": "0.1.0",
  "description": "Node.js Typescript MongoDB REST API - A basic API REST skeleton written on Typescript. Great for building a starter web API for your front-end",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ciriak/node-typescript-mongodb-rest-api-skeleton.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production tsc -P tsconfig.json -w & pm2 start dist/server.js --watch",
    "mocha": "nyc mocha --timeout=5000 --exit",
    "test": "npm run coverage:clean && npm run test:unit && npm run test:e2e && npm run coverage",
    "test:unit": "cross-env NODE_ENV=test jest --coverage",
    "test:e2e": "cross-env NODE_ENV=test npm run fresh && npm run mocha",
    "dev": "cross-env NODE_ENV=development nodemon --watch '**/*.ts' --exec 'ts-node' server.ts",
    "fresh": "npm run clean && npm run seed",
    "clean": "node clean.js",
    "seed": "node seed.js",
    "prettier": "prettier --write --config .prettierrc.json \"**/*.js\"",
    "lint": "eslint --fix --config .eslintrc.json \"**/*.js\"",
    "remark": "remark . -o",
    "coverage": "npm run coverage:merge && npm run coverage:merge-report",
    "coverage:clean": "rimraf -rf .nyc_output && rimraf -rf coverage",
    "coverage:merge": "istanbul-merge --out coverage/merged/coverage-final.json ./coverage/unit/coverage-final.json ./coverage/e2e/coverage-final.json",
    "coverage:merge-report": "nyc report --reporter=lcov --reporter=text --reporter=json --temp-dir=./coverage/merged --report-dir=./coverage/merged"
  },
  "nyc": {
    "reporter": [
      "json",
      "text",
      "lcov"
    ],
    "report-dir": "coverage/e2e",
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "jest.config.js",
      "**/data/**",
      "**/node_modules/**",
      "**/.history/**",
      "**/test/**",
      "**/coverage/**",
      "**/tmp/**"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run remark"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/i18n": "^0.12.0",
    "@types/jest": "^26.0.20",
    "@types/mongoose-paginate-v2": "^1.3.9",
    "@types/morgan": "^1.9.2",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-mailgun-transport": "^1.4.2",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.4",
    "@types/request-ip": "0.0.35",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "babel-eslint": "^10.1.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.16.1",
    "dotenv-safe": "^8.2.0",
    "ejs": "^3.1.5",
    "eslint-config-formidable": "^4.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "expeditious-engine-redis": "^0.1.2",
    "express": "^4.17.1",
    "express-expeditious": "^5.1.1",
    "express-validator": "^6.9.2",
    "faker": "^5.1.0",
    "helmet": "^4.4.1",
    "husky": "^4.3.8",
    "i18n": "^0.13.2",
    "istanbul-merge": "^1.1.1",
    "jest": "^26.6.3",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "mongo-seeding": "^3.5.0",
    "mongoose": "^5.11.13",
    "mongoose-paginate-v2": "^1.3.13",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.17",
    "nodemailer-mailgun-transport": "^2.0.2",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pm2": "^4.5.4",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "remark-cli": "^9.0.0",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "trim-request": "^1.0.6",
    "ts-node": "^9.1.1",
    "uuid": "^8.3.2",
    "validator": "^13.5.2"
  },
  "keywords": [
    "javascript",
    "api",
    "node",
    "express",
    "mongo",
    "mongodb",
    "jwt",
    "postman",
    "i18n",
    "jwt-authentication",
    "token",
    "eslint",
    "starter",
    "web",
    "app",
    "mongoose",
    "rest",
    "skeleton",
    "async",
    "await",
    "mvp",
    "front-end",
    "testing",
    "prettier",
    "mocha",
    "chai",
    "redis",
    "JSDoc"
  ]
}
